<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/grey_f9"
              android:orientation="vertical">

    <ImageView
        android:id="@id/iv_back_top"
        android:layout_width="wrap_content"
        android:layout_height="40.0dip"
        android:layout_gravity="left"
        android:contentDescription="@string/app_name"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:src="@mipmap/ic_login_back"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/icon_logo"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:background="@drawable/login_inform_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/public_default_column_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5.0dip"
                android:paddingTop="5.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_person"/>

                <EditText
                    android:id="@id/et_user_name"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/public_standard_margins"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/normal_text_color"
                    android:textColorHint="@color/login_input_tx_color"
                    android:textSize="@dimen/textsize_14sp"/>

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="20.0dip"
                    android:background="@color/login_input_tx_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingLeft="11.0dip"
                    android:paddingRight="15.0dip"
                    android:textColor="@color/login_input_tx_color"
                    android:textSize="@dimen/textsize_12sp"/>
            </LinearLayout>

            <View
                style="@style/item_divider"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/base_stroke_dp"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="10.0dip"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/public_default_column_height"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15.0dip"
                    android:src="@mipmap/ic_yzm"/>

                <EditText
                    android:id="@id/et_password"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/public_standard_margins"
                    android:layout_marginRight="30.0dip"
                    android:gravity="center_vertical"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/normal_text_color"
                    android:textColorHint="@color/login_input_tx_color"
                    android:textSize="@dimen/textsize_14sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/public_default_column_height"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_marginTop="30.0dip"
            android:background="@drawable/btn_login_selector"
            android:onClick="login"
            android:text="登 录"
            android:textColor="#fff"
            android:textSize="@dimen/textsize_18sp"/>

        <Button
            android:id="@id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/public_default_column_height"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            android:layout_marginTop="30.0dip"
            android:background="@drawable/btn_login_selector"
            android:text="注 册"
            android:onClick="signUp"
            android:textColor="#fff"
            android:textSize="@dimen/textsize_18sp"/>

    </LinearLayout>


</LinearLayout>
