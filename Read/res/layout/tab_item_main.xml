<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/tab_iv_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/tab_image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:clickable="false"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/tab_main_selector" />

        <ImageView
            android:id="@+id/red_mark1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_common_round_red"
            android:visibility="visible" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/tab_iv_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/tab_image_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:clickable="false"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/tab_book_selector" />

        <ImageView
            android:id="@+id/red_mark2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_common_round_red"
            android:visibility="visible" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/tab_iv_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/tab_image_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:clickable="false"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@drawable/tab_my_selector" />

        <ImageView
            android:id="@+id/red_mark3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_common_round_red"
            android:visibility="visible" />
    </FrameLayout>

</LinearLayout>