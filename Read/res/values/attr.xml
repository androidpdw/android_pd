<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="wx_icon" format="reference"/>
    <attr name="wx_color" format="color"/>
    <attr name="text" format="string"/>
    <attr name="text_size" format="dimension"/>

    <declare-styleable name="ChangeColorIconView">
        <attr name="wx_icon"/>
        <attr name="wx_color"/>
        <attr name="text"/>
        <attr name="text_size"/>
    </declare-styleable>
    <declare-styleable name="MySwitchButton">
        <attr name="leftText" format="string"/>
        <attr name="rightText" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textPadding" format="dimension"/>
        <attr name="textCheckedColor" format="color"/>
        <attr name="textUnCheckedColor" format="color"/>
        <attr name="backRectColor" format="color"/>
    </declare-styleable>
</resources>