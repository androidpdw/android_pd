<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 低栏属性 -->
    <attr name="wx_icon" format="reference" />
    <attr name="wx_color" format="color" />
    <attr name="text" format="string" />
    <attr name="text_size" format="dimension" />

    <declare-styleable name="ChangeColorIconView">
        <attr name="wx_icon" />
        <attr name="wx_color" />
        <attr name="text" />
        <attr name="text_size" />
    </declare-styleable>
    <declare-styleable name="MySwitchButton">
        <attr name="leftText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="textPadding" format="dimension" />
        <attr name="textCheckedColor" format="color" />
        <attr name="textUnCheckedColor" format="color" />
        <attr name="backRectColor" format="color" />
    </declare-styleable>

    <!-- EditText https://github.com/Pombo/material-edit-text -->
    <attr name="errorColor" format="color" />
    <attr name="maxCharacters" format="integer" />

    <declare-styleable name="materialEditText">

        <!-- Highlight color of floating label text and underline. -->
        <attr name="backgroundColor" format="color" />
        <!-- Error color of under line text and underline. -->
        <attr name="errorColor" />
        <!-- Enable floating label text. -->
        <attr name="floatingLabel" format="boolean" />
        <!-- Max characters count limit. 0 means no max. -->
        <attr name="maxCharacters" />
        <!-- Icon (ImageView) associated to this EditText. -->
        <attr name="withIcon" format="reference" />
    </declare-styleable>
    <declare-styleable name="fullwidthEditText">

        <!-- Error color of under line text and underline. -->
        <attr name="errorColor" />
        <!-- Max characters count limit. 0 means no max. -->
        <attr name="maxCharacters" />
    </declare-styleable>

    <!-- BookView 属性 -->
    <declare-styleable name="BookView">
        <attr name="cover" format="reference"></attr>
        <attr name="description" format="string"></attr>
        <attr name="price" format="string"></attr>
    </declare-styleable>

    <!-- ViewPagerIndicator属性 -->
    <!-- http://blog.csdn.net/lmj623565791/article/details/42160391 -->
    <attr name="item_count" format="integer"></attr>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" />
    </declare-styleable>

</resources>