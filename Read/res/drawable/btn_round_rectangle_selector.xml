<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/base_stroke_dp" android:color="@color/orange_theme_color" />
            <corners android:radius="@dimen/public_btn_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/base_stroke_dp" android:color="@color/grey_e0" />
            <corners android:radius="@dimen/public_btn_radius" />
        </shape>
    </item>
</selector>